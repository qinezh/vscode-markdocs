{
    "Insert file inclusion": {
        "prefix": "inclusion",
        "body": "[!include [${1:title}](${2:path})]\n",
        "description": "Insert file inclusion"
    },
    "Insert code snippet": {
        "prefix": "code",
        "body": "[!code-${1:language}[${2:name}](${3:path})]\n",
        "description": "Insert code snippet"
    },
    "Insert note block": {
        "prefix": "note",
        "body": [
            "> [!NOTE]",
            "> ${1:content}",
            "> ",
            "\n"
        ],
        "description": "Insert note block"
    },
    "Insert warning block": {
        "prefix": "warning",
        "body": [
            "> [!WARNING]",
            "> ${1:content}",
            "> ",
            "\n"
        ],
        "description": "Insert warning block"
    },
    "Insert tip block": {
        "prefix": "tip",
        "body": [
            "> [!TIP]",
            "> ${1:content}",
            "> ",
            "\n"
        ],
        "description": "Insert tip block"
    },
    "Insert important block": {
        "prefix": "important",
        "body": [
            "> [!IMPORTANT]",
            "> ${1:content}",
            "> ",
            "\n"
        ],
        "description": "Insert important block"
    },
    "Insert caution block": {
        "prefix": "CAUTION",
        "body": [
            "> [!CAUTION]",
            "> ${1:content}",
            "> ",
            "\n"
        ],
        "description": "Insert caution block"
    },
    "Insert tabbed content": {
        "prefix": "tabbed",
        "body": [
            "# [${1:tab title}](#tab/${2:tab-id-1})",
            "${3:tab content}",
            "# [${4:tab title}](#tab/${5:tab-id-2})",
            "${6:tab content}",
            "***"
        ],
        "description": "Insert tabbed content"
    },
    "Insert row extension": {
        "prefix": "row",
        "body": [
            ":::row:::",
            "    :::column:::",
            "        ${1:content}",
            "    :::column-end:::",
            "    :::column:::",
            "        ${2:content}",
            "    :::column-end:::",
            ":::row-end:::"
        ],
        "description": "Insert row extension"
    }
}